container_commands:
  01_create_storage_dirs:
    command: "mkdir -p storage/framework/views storage/framework/cache storage/framework/sessions storage/logs bootstrap/cache"
    ignoreErrors: true
  02_storage_permissions:
    command: "chmod -R 775 storage bootstrap/cache"
  03_storage_ownership:
    command: "chown -R webapp:webapp storage bootstrap/cache"
    ignoreErrors: true
  04_ensure_bootstrap_cache:
    command: "mkdir -p bootstrap/cache && chmod -R 775 bootstrap/cache"
    ignoreErrors: true
  05_storage_link:
    command: "php artisan storage:link"
    ignoreErrors: true
  06_run_migrations:
    command: "php artisan migrate --force"
    leader_only: true
  07_cache_config:
    command: "php artisan config:cache"
  08_cache_routes:
    command: "php artisan route:cache"
  09_cache_views:
    command: "php artisan view:cache"